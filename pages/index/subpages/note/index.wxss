.nav-bar {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  background: #fff;
  box-sizing: initial;
  z-index: 100;
}
.back-icon {
  margin-left: 8px;
  width: 20px;
  height: 20px;
}
.avatar-wrap {
  position: relative;
  font-size: 0;
}
.author-avatar {
  margin-left: 12px;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.follow-icon {
  position: absolute;
  right: -6px;
  bottom: -2px;
  width: 20px;
  height: 20px;
}
.name-wrap {
  margin-left: 12px;
  flex: 1;
}
.author-name {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.time {
  color: #999;
  font-size: 20rpx;
  font-weight: 500;
}

.container {
  padding-bottom: calc(env(safe-area-inset-bottom) + 70rpx);
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 24rpx 80rpx calc(env(safe-area-inset-bottom) + 24rpx);
  width: 100%;
  background: #fff;
  z-index: 100;
}
.comment-btn {
  display: flex;
  align-items: center;
}
.user-avatar {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}
.comment-btn-desc {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #999;
}
.other-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  margin-left: 180rpx;
}
.btn-item {
  position: relative;
  font-size: 0;
}
.btn-icon {
  width: 46rpx;
  height: 46rpx;
}
.btn-data {
  position: absolute;
  top: -4rpx;
  left: 46rpx;
  color: #333;
  font-size: 20rpx;
  font-weight: bold;
}
