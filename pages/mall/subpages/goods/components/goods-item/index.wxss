.goods-item {
  margin-bottom: 30rpx;
  width: 350rpx;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}
.cover-wrap {
  position: relative;
  font-size: 0;
  overflow: hidden;
}
.cover {
  width: 350rpx;
}

.title {
  margin-top: 12rpx;
  padding: 0 12rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
  padding: 0 12rpx 20rpx;
  color: #999;
  font-size: 22rpx;
}
.price {
  line-height: 1;
}
