.spec-selection {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  height: 900rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.spec-info-wrap {
  display: flex;
  align-items: flex-end;
  margin-bottom: 20rpx;
  height: 200rpx;
}
.spec-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}
.spec-info {
  margin-left: 24rpx;
  flex: 1;
  color: #333;
  font-size: 24rpx;
}
.spec-stock {
  margin: 8rpx 0;
  color: #999;
}

.selection-mian {
  flex: 1;
  overflow-y: scroll;
}
.spec-list {
  padding: 30rpx 0;
}
.dividing-line {
  position: relative;
  margin-bottom: 30rpx;
  height: 1rpx;
  background-color: #dbdbdb;
}
.dividing-line-title {
  position: absolute;
  top: -14rpx;
  left: 0;
  padding-right: 20rpx;
  line-height: 30rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  background-color: #fff;
}
.spec-tips {
  display: inline-block;
  margin: 24rpx 24rpx 0 0;
  padding: 0 20rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 62rpx;
  white-space: nowrap;
  border-radius: 8rpx;
  border: 1px solid #F6F6F6;
  background-color: #F6F6F6;
}
.spec-tips.selected {
  border: 1px solid #E1C7AA;
  background-color: rgb(254, 244, 245);
}

.count-control-wrap {
  display: flex;
  justify-content: flex-end;
}

.btns-wrap {
  margin-top: 24rpx;
}
.add-cart-btn, .buy-btn, .edit-btn {
  flex: 1;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.add-cart-btn {
  background: #1986F8;
}
.buy-btn {
  background: #161F4E;
}
.edit-btn {
  background: #212121;
}
