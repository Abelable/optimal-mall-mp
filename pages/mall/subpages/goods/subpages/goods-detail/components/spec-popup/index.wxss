.spec-selection {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  width: 100%;
  height: 900rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}
.selectedGoods-info-wrap {
  margin-bottom: 20rpx;
  display: flex;
  height: 200rpx;
}
.selectedGoods-info {
  padding-left: 28rpx;
  padding-right: 46rpx;
  flex: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
}
.selectedGoods-name {
  height: 90rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.selectedGoods-price {
  color: #E82631;
  font-size: 34rpx;
}
.selectedGoods-stock {
  color: #999;
}

.selection-mian {
  flex: 1;
  overflow-y: scroll;
}
.spec-list {
  padding: 30rpx 0;
}
.dividing-line {
  position: relative;
  margin-bottom: 30rpx;
  height: 2rpx;
  background-color: #D9D9D9;
}
.dividing-line-title {
  position: absolute;
  top: -14rpx;
  left: 0;
  padding-right: 20rpx;
  line-height: 30rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  background-color: #fff;
}
.spec-tips {
  display: inline-block;
  margin: 24rpx 24rpx 0 0;
  padding: 0 20rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 62rpx;
  white-space: nowrap;
  border-radius: 8rpx;
  border: 1px solid #F6F6F6;
  background-color: #F6F6F6;
}
.spec-tips.selected {
  border: 1px solid #E1C7AA;
  background-color: rgb(254, 244, 245);
}
.btns-wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.spec-btn {
  width: 300rpx;
  height: 68rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 64rpx;
  border-radius: 44rpx;
  border: 2rpx solid #ECC498;
}
.spec-btn.addCart {
  color: #ECC498;
}
.spec-btn.directBuy {
  color: #000;
  background: linear-gradient(2deg,rgba(234,171,99,1) 0%,rgba(236,196,152,1) 100%);
}
.count-control-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.finish-btn {
  margin: 0 auto;
  margin-top: 30rpx;
  height: 80rpx;
  width: 680rpx;
  background: #000;
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height: 80rpx;
}
.finish-btn.in-cart {
  background: #FD0B0A;
}
.apply-btn {
  margin: 0 auto;
  width: 702rpx;
  height: 80rpx;
  color: #0F131A;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(270deg, #FFD699 0%, #FFE5BD 100%);
  border-radius: 12rpx;
}
