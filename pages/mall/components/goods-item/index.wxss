.goods-item {
  margin-bottom: 30rpx;
  width: 350rpx;
}
.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 18rpx;
  overflow: hidden;
}
.cover {
  width: 350rpx;
}
.address-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.address-icon {
  margin-right: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.address-detail {
  flex: 1;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
}
.title {
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.label-list {
  display: flex;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.label {
  margin-right: 10rpx;
  color: #999;
  font-size: 20rpx;
  background: #f6f6f6;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 10rpx;
  color: #888;
  font-size: 22rpx;
}
.price {
  line-height: 1;
}
