.nav-bar {
  position: fixed;
  width: 100%;
  background: #fff;
  box-shadow: 0 2px 20px -2px #f0f0f0;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  height: 44px;
}

.team-leader-info {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  width: 350rpx;
}
.avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
}
.nickname-wrap {
  margin-left: 10rpx;
  flex: 1;
}
.nickname {
  color: #333;
  font-size: 28rpx;
  font-weight: 550;
}
.signature {
  color: #666;
  font-size: 18rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  padding: 0 22rpx;
  width: 340rpx;
  height: 36px;
  border-radius: 18px;
  border: 1px solid #ddd;
}
.placeholder {
  flex: 1;
  margin-left: 12rpx;
  color: #999;
  font-size: 26rpx;
}

.search-btn, .share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  width: 34px;
  height: 34px;
  border-radius: 18px;
  border: 1px solid #ddd;
}
.search-icon, .share-icon {
  width: 16px;
  height: 16px;
}

.container {
  position: relative;
  display: flex;
  height: 100vh;
  background: #fff;
}
.category-options {
  width: 180rpx;
  height: 100%;
  background: #f5f6f7;
  overflow-y: scroll;
}
.category-option {
  padding-left: 24rpx;
  height: 120rpx;
  color: #666;
  font-size: 28rpx;
  font-weight: 300;
}
.category-option.active {
  position: relative;
  color: #333;
  font-weight: 550;
  background: #fff;
}
.category-option.active::before {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  content: "";
  border-radius: 0 8rpx 8rpx 0;
  background: #6097f7;
}

.goods-list {
  padding: 20rpx;
  flex: 1;
  height: 100%;
  overflow-y: scroll;
}
.category-name {
  margin-bottom: 20rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 550;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
