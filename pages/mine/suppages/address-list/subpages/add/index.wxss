.info-list {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.info-list:last-child {
  border: none;
}
.content {
  margin-left: 20rpx;
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.content.placeholder {
  color: #999;
}

.address-default {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
  padding-left: 20rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.delete-btn, .save-btn {
  flex: 1;
  margin: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-sizing: border-box;
}
.delete-btn {
  background-color: #F7CC9C;
  color: #000;
}
.save-btn {
  background-color: #000;
  color: #F7CC9C;
}
