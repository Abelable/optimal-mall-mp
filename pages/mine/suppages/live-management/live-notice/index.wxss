.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(20px);
  transform: scale(1.2);
  z-index: -1;
}

.nav-bar {
  margin-left: 8px;
  height: 44px;
}
.nav-bar-btn {
  position: relative;
  width: 86px;
  height: 32px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.18);
  border: 0.5px solid rgba(255, 255, 255, 0.3);
}
.nav-bar-btn::after {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  content: '';
  width: 0.5px;
  height: 18px;
  background: #fff;
}
.nav-back-icon {
  margin-left: 10px;
  width: 20px;
  height: 20px;
}
.share-icon {
  margin-right: 13px;
  width: 18px;
  height: 18px;
}

.cover-wrap {
  position: relative;
  margin: 120rpx auto 0;
  width: 440rpx;
  height: 440rpx;
  border-radius: 18rpx;
  overflow: hidden;
}
.tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 80rpx;
  height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  background: #3F5F9A;
  border-radius: 4rpx;
}

.title {
  margin: 32rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.time-wrap {
  margin: 48rpx auto 0;
  padding: 30rpx;
  width: 538rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 60rpx;
}

.btn-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 24rpx calc(24rpx + env(safe-area-inset-bottom));
  width: 100%;
}

.delete-btn, .start-btn {
  width: 340rpx;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.delete-btn {
  color: #f68686;
  border: 1rpx solid #f68686;
}
.start-btn {
  color: #fff;
  border: 1rpx solid #fff;
}
