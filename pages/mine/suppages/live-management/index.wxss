page {
  padding-bottom: env(safe-area-inset-bottom);
}

.img-uploader-wrap {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}
.cover-uploader {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 346rpx;
  border-radius: 10rpx;
  background: #F3F4F5;
}
.uploader-icon {
  width: 36rpx;
  height: 36rpx;
}
.uploader-size {
  margin-top: 12rpx;
  color: #333;
  font-size: 28rpx;
}
.uploader-tips {
  margin-top: 16rpx;
  color: #7A7B7C;
  font-size: 28rpx;
}

.loading {
  width: 50rpx;
  height: 50rpx;
  border: 2px solid #7A7B7C;
  border-top-color: transparent;
  border-radius: 100%;
  animation: circle infinite 0.75s linear;
}
@keyframes circle {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.room-info-fill-part {
  margin-top: 20rpx;
  background: #fff;
}
.room-info-fill-list {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #F5F6F7;
}
.room-info-fill-list.center {
  align-items: center;
}
.room-info-fill-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.room-info-fill-content {
  margin-left: 40rpx;
  flex: 1;
}
.room-name-input, .room-secret-input {
  font-size: 28rpx;
}
.room-secret-input {
  text-align: right;
}

.display-mode-selection-wrap {
  display: flex;
}
.display-mode-selection {
  flex: 1;
}
.selection-item {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}
.selection-icon {
  margin-right: 10rpx;
  width: 32rpx;
  height: 32rpx;
}
.display-mode-selection-tips {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  color: #999;
  font-size: 24rpx;
}
.mode-icon {
  margin-right: 4rpx;
  width: 32rpx;
  height: 32rpx;
}

.obs-tips {
  padding: 16rpx 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

.goods-picker-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
  height: 100rpx;
  background: #fff;
} 
.goods-picker {
  display: flex;
  align-items: center;
}
.goods-picker-placeholder {
  color: #999;
  font-size: 28rpx;
}
.picked-goods-list {
  font-size: 0;
}
.picked-goods-img {
  margin-left: -16rpx;
  width: 68rpx;
  height: 68rpx;
  background: #f5f6f7;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.room-setting-options-wrap {
  margin-top: 20rpx;
  background: #fff;
}
.room-setting-option-list {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #F5F6F7;
}
.option-list-title-wrap {
  flex: 1;
}
.option-list-title {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.help-icon {
  margin-left: 6rpx;
  width: 32rpx;
  height: 32rpx;
}
.option-list-title-desc {
  margin-top: 8rpx;
  color: #999;
  font-size: 24rpx;
}
.setting-switch {
  transform: scale(0.8);
}

.create-notice-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
  height: 88rpx;
  background: #fff;
}
.create-notice-desc {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.time-selector {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}
.right-arrow {
  width: 32rpx;
  height: 32rpx;
}

.start-live, .get-explain {
  margin: 30rpx auto;
  width: 548rpx;
  height: 90rpx;
  color: var(--gold);
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 45rpx;
  background: var(--gradient-black);
}
.start-live {
  margin: 30rpx auto;
}
.live-icon {
  margin-right: 14rpx;
  width: 40rpx;
  height: 40rpx;
}

.resolution-selection-wrap {
  padding: 30rpx;
  border-bottom: 1px solid #F5F6F7;
}
.resolution-selection-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.resolution-selections {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.resolution-selection {
  width: 220rpx;
  height: 100rpx;
  color: #999;
  text-align: center;
  background: #F5F6F7;
  border-radius: 8rpx;
}
.resolution-selection.active {
  position: relative;
  color: #fff;
  background: linear-gradient(128deg, #404A5C 0%, #0F131A 100%);
}
.resolution-name {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.resolution-detail {
  margin-top: 6rpx;
  font-size: 20rpx;
}
.selected-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 32rpx;
  height: 32rpx;
}
