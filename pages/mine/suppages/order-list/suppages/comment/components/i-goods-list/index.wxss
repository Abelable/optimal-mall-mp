.goods-list {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
}
.good-info {
  display: flex;
}
.img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.title {
  margin-left: 16rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.comment-area {
  margin-top: 20rpx;
  padding: 10rpx 16rpx;
  width: calc(100% - 48rpx);
  height: 200rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  background: #F5F6F6;
  border-radius: 12rpx;
}