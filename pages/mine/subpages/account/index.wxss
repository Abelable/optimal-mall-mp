.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  background: #fff;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
}
.nav-bar-title {
  margin-right: 44px;
  flex: 1;
  color: #000;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
}

.container {
  position: relative;
  padding: 24rpx;
  min-height: 100vh;
  background-image: url("https://static.youbozhenxuan.cn/mp/account_bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}

.amount-card {
  margin-top: 24rpx;
  background: linear-gradient( 90deg, #FFF8F7 0%, #FFEBE6 100%);
  border-radius: 20rpx;
  overflow: hidden;
}
.amount-total {
  position: relative;
  padding: 32rpx;
  height: 180rpx;
  background-image: url('https://static.youbozhenxuan.cn/mp/account_amount_bg.png');
  background-position: -20rpx -20rpx;
  background-size: calc(100% + 40rpx) calc(100% + 40rpx);
  background-repeat: no-repeat;
}
.amount-title {
  color: #14191F;
  font-size: 28rpx;
}
.withdraw-record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 48rpx;
  color: #FF4747;
  font-size: 24rpx;
  background: #FDF8F7;
  border-radius: 24rpx;
}
.amount {
  margin-top: 12rpx;
  color: #14191F;
  font-size: 44rpx;
  font-weight: bold;
}

.amount-type-wrap {
  padding: 32rpx 40rpx;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
}
.amount-type-item:first-child {
  margin-right: 152rpx;
}
.amount-type-name {
  color: #3C3F42;
  font-size: 24rpx;
}
.type-amount {
  margin-top: 20rpx;
  color: #14191F;
  font-size: 40rpx;
  font-weight: bold;
}
.type-withdraw-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  width: 116rpx;
  height: 48rpx;
  color: #fff;
  font-size: 24rpx;
  background: linear-gradient( 135deg, #FFA266 0%, #FF3D39 64%, #FF3636 100%);
  border-radius: 24rpx;
}
.withdraw-tips-wrap {
  padding: 24rpx 20rpx;
}
.withdraw-time-tips {
  flex: 1;
  color: #6A6F75;
  font-size: 24rpx;
}
.withdraw-rules-btn {
  display: flex;
  align-items: center;
  color: #F5701D;
  font-size: 24rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}
