<view class="form-wrap">
  <view class="form-item row">
    <label class="form-label">退款金额 </label>
    <view class="form-content">¥50.00</view>
  </view>
  <view class="form-item row">
    <label class="form-label requied">退款方式</label>
    <picker 
      class="form-picker {{type === undefined ? 'placeholder' : ''}}" 
      range="{{typeList}}"
      bindchange="selectType" 
    >
      {{type === undefined ? '请选择退款方式' : typeList[type]}}
    </picker>
    <image class="arrow" src="/images/arrow.png" />
  </view>
  <view class="form-item">
    <label class="form-label requied">退款说明</label>
    <textarea class="form-textarea" bindinput="setContent" placeholder="请输入退款理由" />
  </view>
  <view class="form-item">
    <label class="form-label">相关图片</label>
    <view class="uploader-wrap">
      <van-uploader 
        file-list="{{imageList}}" 
        bind:after-read="uploadImage" 
        bind:delete="deleteImage" 
        accept="image" 
        max-count="10" 
        deletable 
      />
    </view>
  </view>
</view>

<view class="submit-btn row center" bindtap="submit">提交</view>