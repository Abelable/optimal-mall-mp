.container {
  position: relative;
  font-size: 0;
  overflow: hidden;
  padding-bottom: calc(48px + env(safe-area-inset-bottom));
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
}
.content {
  position: relative;
  margin-top: 360rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #f5f6f8;
}

.user-info-wrap {
  position: relative;
  padding: 24rpx 0 24rpx 240rpx;
}
.avatar {
  position: absolute;
  top: -36rpx;
  left: 36rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 10rpx solid #f5f6f8;
  background: #f5f6f8;
}
.name {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
}
.introduce {
  padding-top: 6rpx;
  color: #666;
  font-size: 24rpx;
}
.edit-icon {
  margin-left: 6rpx;
  width: 24rpx;
  height: 24rpx;
}

.order-center {
  margin: 24rpx;
  margin-top: 32rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: #fff;
}
.title {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.check-more-btn {
  color: #999;
  font-size: 24rpx;
}
.more-icon {
  margin-left: 5rpx;
  width: 24rpx;
  height: 24rpx;
}
.order-btn-wrap {
  margin-top: 32rpx;
}
.order-btn {
  font-size: 0;
  text-align: center;
}
.order-icon {
  width: 48rpx;
  height: 48rpx;
}
.order-desc {
  margin-top: 8rpx;
  color: #333;
  font-size: 22rpx;
}
