.nav-bar-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
}
.nav-bar {
  padding: 0 8px;
  height: 44px;
}

.menu-tab {
  margin: 0 12px;
  padding: 0 12px;
  height: 44px;
  color: #999;
  font-size: 15px;
}
.menu-tab.active {
  position: relative;
  color: #333;
  font-weight: 550;
}
.menu-tab.active::after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2px;
  content: "";
  background: #333;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
