<view class="nav-bar-wrap" style="padding-top: {{statusBarHeight}}px;">
  <view class="nav-bar row">
    <view style="flex: 1;">
      <back-icon custom="{{custom}}" bind:navigateBack="navigateBack" />
    </view>
    <view class="menu-tabs">
      <view 
        class="menu-tab {{ curMenuIdx === index ? 'active' : '' }}" 
        wx:for="{{['关注', '粉丝']}}" 
        wx:key="index" 
        bindtap="selectMenu" 
        data-index="{{ index }}"
      >{{ item }}{{ index === 0 ? '' : '' }}</view>
    </view>
    <view style="flex: 1;"></view>
  </view>
</view>


<empty-illus 
  wx:if="{{(curMenuIdx === 0 && !followList.length) || (curMenuIdx === 1 && !fanList.length)}}" 
  desc="{{curMenuIdx === 0 ? '暂未关注任何人' : '你还没有粉丝哦'}}"
/>
