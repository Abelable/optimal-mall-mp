.goods-picker-popup {
  position: relative;
  padding: 24rpx;
  padding-bottom: 136rpx;
  height: 1100rpx;
  max-height: 100vh;
  background: #f5f6f7;
}

.goods-list-wrap {
  height: 100%;
  overflow-y: scroll;
}
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-item {
  margin-bottom: 22rpx;
  padding: 24rpx;
  width: 340rpx;
  height: 450rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}
.goods-img {
  width: 292rpx;
  height: 292rpx;
  border-radius: 10rpx;
}
.goods-name {
  margin-top: 10rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.pick-icon {
  width: 32rpx;
  height: 32rpx;
}

.confirm-btn {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  background: linear-gradient(128deg, #53678d 0%, #161F4E 100%);
  border-radius: 44rpx;
}
