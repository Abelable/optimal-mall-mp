.ticket {
  position: relative;
  padding: 24rpx;
  background: #feede6;
  border-radius: 24rpx;
}
.ticket-title {
  color: #333;
  font-size: 24rpx;
}
.ticket-name {
  margin-top: 12rpx;
  color: #333;
  font-size: 38rpx;
  font-weight: 550;
}
.ticket-tips-wrap {
  margin-top: 48rpx;
}
.ticket-tips {
  margin-top: 12rpx;
  font-size: 24rpx;
}
.tips-title {
  font-weight: 500;
}
.tips-content {
  margin-left: 12rpx;
}

.split-line {
  position: absolute;
  left: 0;
  top: 132rpx;
  width: 100%;
  height: 24rpx;
}
.line {
  margin: 0 24rpx;
  width: 100%;
  border-top: 1px dashed #ccc;
}
.left-circle, .right-circle {
  position: absolute;
  top: 0;
  width: 12rpx;
  height: 24rpx;
  background: #fff;
}
.left-circle {
  left: -1px;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
.right-circle {
  right: -1px;
  border-top-left-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
}
