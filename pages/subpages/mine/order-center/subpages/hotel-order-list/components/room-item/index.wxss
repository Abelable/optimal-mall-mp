.room-img {
  margin-left: 8rpx;
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.room-content {
  display: flex;
  flex-direction: column;
  padding-right: 18rpx;
  flex: 1; 
  height: 190rpx;
}
.room-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.room-detail-wrap {
  flex: 1;
}
.room-info-list {
  margin-top: 12rpx;
}
.room-info {
  padding: 0 16rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 1;
  border-right: 1px solid #ddd;
}
.room-info:first-child {
  padding-left: 0;
}
.room-info:last-child {
  border-right: none;
}

.room-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.count-wrap {
  font-size: 24rpx;
  color: #3979BE;
}
.count {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-weight: 500;
}
