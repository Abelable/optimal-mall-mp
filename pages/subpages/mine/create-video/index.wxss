.container {
  padding: 24rpx 24rpx calc(124rpx + env(safe-area-inset-bottom));
}

.card {
  position: relative;
  margin-bottom: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: #fff;
  border-radius: 16rpx;
}

.title-textarea {
  margin-right: 24rpx;
  flex: 1;
  color: #333;
  line-height: 1.5;
}
.length-desc {
  position: absolute;
  right: 228rpx;
  bottom: 24rpx;
  color: #999;
}
.cover-wrap {
  position: relative;
  width: 180rpx;
  font-size: 0;
}
.cover {
  width: 180rpx;
}
.cover-editor {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 42rpx;
  color: #fff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.4);
}

.list {
  height: 110rpx;
  border-bottom: 1px solid #F5F6F7;
}
.list:last-child {
  border-bottom: none;
}
.list-picker {
  color: #666;
}
.list-icon {
  margin-right: 10rpx;
  width: 42rpx; 
  height: 42rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}
.delete-icon {
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.publish-btn {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  width: calc(100% - 48rpx);
  height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  background: #DEDEDE;
}
.publish-btn.active {
  background: #161F4E;
}
