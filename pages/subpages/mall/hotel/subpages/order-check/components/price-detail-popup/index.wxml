<popup bind:hide="hide">
  <view class="price-detail-popup">
    <view class="popup-title row center">费用明细</view>
    <view class="price-list">
      <view class="price-item row between">
        <view class="price-name">{{name}} x {{night}}晚 x {{num}}间 {{breakfastNum ? '含' + breakfastNum + '份早餐' : ''}}</view>
        <view class="price-detail">¥{{price}} x {{night}} x {{num}}</view>
      </view>
    </view>
  </view>
</popup>
