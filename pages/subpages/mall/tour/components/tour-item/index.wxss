.tour-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 0;
  border-bottom: 1px solid #f5f6f8;
}
.cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
  height: 190rpx;
}
.title {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.labels {
  display: flex;
  margin-top: 10rpx;
}
.label {
  margin-right: 10rpx;
  color: #999;
  font-size: 18rpx;
  background: #f6f6f6;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}
.shop-name {
  margin-top: 10rpx;
  color: #666;
  font-size: 20rpx;
}
.price-info {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  flex: 1;
}
.sales {
  color: #666;
  font-size: 20rpx;
}
.price {
  color: #999;
  font-size: 20rpx;
  line-height: 1;
}