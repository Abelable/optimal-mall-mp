<image-cropper 
  id="image-cropper" 
  imgSrc="{{src}}" 
  bindimageload="loadimage" 
  bindtapcut="clickcut" 
  height="{{height}}" 
  limit_move
  disable_width
  disable_height
  disable_rotate
/>

<view class="btn-wrap row between">
  <button class="cancel-btn" bindtap='cancel' hover-class="none">取消</button>
  <button class="confirm-btn" bindtap='submit' hover-class="none">确定</button>
</view>
