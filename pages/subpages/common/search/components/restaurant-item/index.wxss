.restaurant {
  margin-bottom: 24rpx;
  padding: 24rpx;
  font-size: 0;
  background: #fff;
  border-radius: 24rpx;
}

.restaurant-cover {
  width: 204rpx;
  height: 204rpx;
  border-radius: 12rpx;
}

.restaurant-content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
}
.restaurant-title {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.category {
  margin-left: 8rpx;
  padding: 0 12rpx;
  height: 32rpx;
  color: #77a9fd;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
  border-radius: 8rpx;
  background: #ebf2fd;
}

.facilityList {
  display: flex;
  margin-top: 10rpx;
}
.facility {
  margin-right: 10rpx;
  color: #999;
  font-size: 18rpx;
  background: #f6f6f6;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.score-wrap {
  display: flex;
  align-items: baseline;
  margin-top: 6rpx;
}
.score {
  margin-left: 10rpx;
  color: #999;
  font-size: 20rpx;
}
.score.active {
  color: #ffd21e;
  font-size: 22rpx;
  font-weight: bold;
}

.price {
  margin-left: 18rpx;
  color: #333;
  font-size: 22rpx;
}

.open-time-wrap {
  margin-top: 12rpx;
}
.open-status {
  padding: 0 12rpx;
  height: 32rpx;
  color: #faad14;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
  border-radius: 8rpx;
  background: #f8f2d3;
}
.open-status.active {
  color: #5dce86;
  background: #d1f7e5;
}
.open-time-list {
  margin-left: 12rpx;
}
.open-time {
  color: #333;
  font-size: 22rpx;
}

.position-wrap {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  color: #666;
  font-size: 20rpx;
}
.position-icon {
  margin-right: 6rpx;
  width: 20rpx;
  height: 20rpx;
}
