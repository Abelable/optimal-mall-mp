.popup-title {
  padding-left: 15px;
  height: 44px;
}

.goods-list {
  padding: 0 12px;
  height: 500px;
  max-height: calc(100vh - 44px - env(safe-area-inset-bottom));
  overflow-y: scroll;
}

.goods-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  padding: 15px;
  height: 126px;
  background: #FFFFFF;
  border-radius: 12px;
}
.goods-img-wrap {
  position: relative;
  width: 96px;
  height: 96px;
  font-size: 0;
  border-radius: 10px;
  overflow: hidden;
}
.goods-img {
  width: 96px;
  height: 96px;
  background: yellow;
}
.goods-index {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  padding: 0 7px;
  height: 16px;
  color: #fff;
  font-size: 10px;
  line-height: 1;
  background: #000;
  border-radius: 10px 0px 6px 0px;
}
.goods-id.is-hot {
  background: #FF3148;
}
.goods-info-wrap {
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  flex: 1;
  height: 96px;
}
.goods-name {
  color: #333;
  font-size: 14px;
}
.goods-name text{
  display:inline-block;
  vertical-align: middle;
}
.goods-tag {
  margin-right: 2px;
  padding: 1px 2px;
  color: #fff;
  font-size: 10px;
  background: linear-gradient(270deg, #BCA26F 4%, #B98E4D 100%);
  border-radius: 2px;
}
.goods-stock {
  margin-top: 4px;
  flex: 1;
  color: #999;
  font-size: 12px;
}
.goods-price-wrap {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.goods-price {
  color: #BA9243;
  font-size: 16px;
}
.buy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64px;
  height: 24px;
  color: #FFE5BD;
  font-size: 12px;
  line-height: 1;
  background: linear-gradient(270deg, #404A5C 0%, #0F131A 99%);
  border-radius: 12px;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
