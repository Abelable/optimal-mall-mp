.more-feature-popup {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 300rpx;
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
}
.more-modal::after {
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  width: 90rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #330000;
}

.feature-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 0;
}
.feature-icon {
  width: 92rpx;
  height: 92rpx;
}
.feature-desc {
  margin-top: 16rpx;
  color: #666;
  font-size: 22rpx;
}
