.beauty-popup {
  padding-bottom: env(safe-area-inset-bottom);
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 6px;
  padding-right: 15px;
  height: 50px;
}
.menu-wrap {
  display: flex;
  align-items: center;
}
.menu-item {
  padding: 0 18px;
  color: #8C8C8C;
  font-size: 14px;
  line-height: 38px;
  height: 38px;
}
.menu-item.selected {
  position: relative;
  color: #fff;
  font-weight: bold;
}
.menu-item.selected::after {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 26px;
  height: 2px;
  content: '';
  background: #fff;
  border-radius: 1px;
}

.reset-btn {
  display: flex;
  align-items: center;
  color: #8C8C8C;
  font-size: 12px;
}
.reset-icon {
  margin-right: 4px;
  width: 14px;
  height: 14px;
}

.content {
  padding: 15px 0;
  height: 150px;
  color: #fff;
}

.whiteness-wrap {
  padding: 0 15px;
}
.slider-wrap {
  display: flex;
  align-items: center;
  margin-top: 15px;
}
.slider-title {
  margin-right: 10px;
  color: #fff;
  font-size: 14px;
}
.slider {
  flex: 1;
}

.visual-filter-wrap, .sound-filter-wrap {
  white-space: nowrap;
}
.visual-filter-item {
  display: inline-block;
  margin-left: 5px;
  width: 54px;
  color: #fff;
  font-size: 11px;
  text-align: center;
  border-radius: 50%;
}
.visual-filter-item:first-child {
  margin-left: 10px;
  color: #8C8C8C;
}
.visual-filter-item:last-child {
  margin-right: 10px;
}
.visual-filter-item.selected {
  color: var(--theme-color);
}
.visual-filter-icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6px;
  width: 52px; 
  height: 70px;
  background: #373738;
  border-radius: 6px;
  border: 1px solid transparent;
}
.visual-filter-item.selected .visual-filter-icon-wrap {
  border-color: var(--theme-color);
}
.visual-filter-icon {
  width: 100%; 
  height: 100%;
}
.visual-filter-icon.default {
  width: 20px; 
  height: 20px;
}


.sound-filter-item {
  display: inline-block;
  vertical-align: top;
  margin-left: 5px;
  width: 52px; 
  height: 70px;
  border-radius: 6px;
}
.sound-filter-item:first-child {
  margin-left: 10px;
}
.sound-filter-item:last-child {
  margin-right: 10px;
}
.sound-filter-item-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 11px;
  width: 52px; 
  height: 70px;
  border-radius: 6px;
  background: #373738;
  border: 1px solid #373738;
}
.sound-filter-item-inner.selected {
  color: var(--theme-color);
  border-color: var(--theme-color);
}
.sound-filter-icon {
  width: 20px;
  height: 20px;
}

