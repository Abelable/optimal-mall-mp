<popup bind:hide="hide" background="#f5f6f8">
  <view class="hd-popup">
    <view class="title">选择清晰度</view>
    <view class="resolution-selections">
      <view 
        class="resolution-selection row" 
        wx:for="{{resolutionList}}"
        wx:key="index"
        bindtap="selectResolution"
        data-index="{{index}}"
      >
        <view class="resolution-name">{{item.name}}</view>
        <view class="resolution-detail">{{item.detail}}</view>
        <image class="pick-icon" src="https://static.chengxinxingqiu.cn/mp/live/explain_goods/{{definitionIndex === index ? '' : 'un'}}selected.png" />
      </view>
    </view>
  </view>
</popup>
