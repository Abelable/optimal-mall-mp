.features-popup {
  padding-bottom: env(safe-area-inset-bottom);
  max-height: calc(100vh - env(safe-area-inset-bottom));
  overflow-y: scroll;
}
.title {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
  color: #333;
  font-size: 16px;
  font-weight: bold;
  line-height: 1;
}
.list {
  display: flex;
  flex-wrap: wrap;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
  width: 25%;
  max-width: 75px;
}
.more-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #F1F5F7;
}
.more-desc {
  margin-top: 3px;
  color: #999;
  font-size: 10px;
}
