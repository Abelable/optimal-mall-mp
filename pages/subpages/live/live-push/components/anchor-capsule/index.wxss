.anchor-capsule {
  margin-left: 8px;
  padding-left: 2px;
  padding-right: 12px;
  max-width: 150px;
  height: 32px;
  border-radius: 16px;
  background-color: rgba(0, 0, 0, 0.3);
  border: 0.5px solid rgba(255,255,255,0.3);
}
.anchor-avatar {
  width: 27px;
  height: 27px;
  border-radius: 50%;
}
.anchor-capsule-content {
  margin-left: 5px;
  flex: 1;
  color: #fff;
}
.anchor-name {
  font-size: 11px;
  font-weight: bold;
}
.audience-count {
  margin-top: 1px;
  font-size: 8px;
}
