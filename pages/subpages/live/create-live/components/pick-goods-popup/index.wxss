.pick-goods-popup {
  position: relative;
  padding: 24rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
  height: 1200rpx;
  background: #f5f6f7;
}

.goods-list-wrap {
  height: 100%;
  overflow-y: scroll;
}
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 22rpx;
  padding: 30rpx;
  width: 340rpx;
  height: 488rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.goods-img {
  width: 280rpx;
  height: 280rpx;
  border-radius: 20rpx;
  background: #f5f6f7;
}
.goods-name {
  margin-top: 24rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.goods-price {
  color: #BA9243;
  font-size: 32rpx;
}
.pick-icon {
  width: 32rpx;
  height: 32rpx;
}

.bottom-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  background: #fff;
}
.btn-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 64rpx;
  padding-right: 54rpx;
  height: 100rpx;
}
.tips {
  color: #FB6155;
  font-size: 24rpx;
}
.confirm-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 196rpx;
  height: 64rpx;
  color: #666;
  font-size: 32rpx;
  background: #E4E4E4;
  border-radius: 32rpx;
}
.confirm-btn.active {
  color: #FFE5BD;
  background: linear-gradient(270deg, #404A5C 0%, #0F131A 99%);
}
