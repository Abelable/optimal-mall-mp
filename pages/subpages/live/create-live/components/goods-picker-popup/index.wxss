.goods-picker-popup {
  position: relative;
  padding: 24rpx;
  padding-bottom: 100rpx;
  height: 1100rpx;
  max-height: 100vh;
  background: #f5f6f7;
}

.search-bar {
  margin-bottom: 24rpx;
}
.search-content {
  position: relative;
  padding-right: 120rpx;
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  border: 1px solid #F5701D;
}
.search-icon {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.search-input {
  padding-left: 10rpx;
  flex: 1;
  height: 72rpx;
  color: #333;
  font-size: 26rpx;
}
.cancel-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}
.cancel-icon {
  width: 32rpx;
  height: 32rpx;
}
.search-btn {
  position: absolute;
  top: -1px;
  right: -1px;
  width: 120rpx;
  height: 72rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 36rpx;
  background: #F5701D;
}

.goods-list-wrap {
  height: 100%;
  overflow-y: scroll;
}
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 100rpx;
}
.goods-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  width: 340rpx;
  height: 450rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}
.goods-img {
  width: 292rpx;
  height: 292rpx;
  border-radius: 10rpx;
}
.goods-name {
  margin-top: 10rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.pick-icon {
  width: 32rpx;
  height: 32rpx;
}

.bottom-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.btn-wrap {
  padding: 0 32rpx;
  height: 100rpx;
}
.select-all-tips {
  margin-left: 10rpx;
  color: #333;
  font-size: 28rpx;
}
.confirm-btn {
  width: 196rpx;
  height: 64rpx;
  color: #666;
  font-size: 28rpx;
  background: #E4E4E4;
  border-radius: 32rpx;
}
.confirm-btn.active {
  color: #fff;
  background: var(--theme-color);
}
