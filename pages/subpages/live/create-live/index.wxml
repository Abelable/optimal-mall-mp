<view class="container">
  <view class="card">
    <view class="cover-uploader-wrap row" bindtap="cropCover">
      <view class="uploader-info">
        <view class="title">上传列表封面</view>
        <view class="uploader-size">封面限制比例2:3</view>
      </view>
      <view class="cover-uploader row center">
        <image class="uploader-icon" wx:if="{{!cover && !uploadCoverLoading}}" src="./images/plus.png" />
        <view class="loading" wx:if="{{uploadCoverLoading}}" />
        <image wx:if="{{!uploadCoverLoading && cover}}" style="width: 100%; height: 100%;" src="{{cover}}" />
      </view>
      <image class="arrow" src="./images/gray-arrow.png" />
    </view>
    <view class="cover-uploader-wrap row" bindtap="cropShareCover">
      <view class="uploader-info">
        <view class="title">上传分享封面</view>
        <view class="uploader-size">封面限制比例1:1</view>
      </view>
      <view class="share-cover-uploader row center">
        <image class="uploader-icon" wx:if="{{!shareCover && !uploadShareCoverLoading}}" src="./images/plus.png" />
        <view class="loading" wx:if="{{uploadShareCoverLoading}}"  />
        <image wx:if="{{!uploadShareCoverLoading && shareCover}}" style="width: 100%; height: 100%;" src="{{shareCover}}" />
      </view>
      <image class="arrow" src="./images/gray-arrow.png" />
    </view>
  </view>
  
  <view class="card">
    <view class="list row">
      <view class="title">直播标题</view>
      <input class="list-input" value="{{title}}" bindinput="setTitle" placeholder="请输入直播标题" />
    </view>
    <view class="list row between">
      <view class="title">展示方式</view>
      <view class="list-seletion row">
        <view class="selection-item row" wx:for="{{['竖屏', '横屏']}}" wx:key="index" bindtap="selectDirection" data-direction="{{index + 1}}">
          <image class="selection-icon" src="https://static.chengxinxingqiu.cn/mp/live/explain_goods/{{direction === (index + 1) ? '' : 'un'}}selected.png" />
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    <view class="list row between">
      <view class="title">添加商品</view>
      <view class="list-picker row" bindtap="showGoodsPickerPopup">
        <text>{{pickedGoodsIds.length ? ('已选' + pickedGoodsIds.length + '件商品') : '请选择商品'}}</text>
        <image class="arrow" src="./images/gray-arrow.png" />
      </view>
    </view>
  </view>

  <view class="card" style="padding-top: 32rpx;">
    <view class="title">直播清晰度</view>
    <view class="resolution-selections">
      <view 
        class="resolution-selection row" 
        wx:for="{{resolutionList}}"
        wx:key="index"
        bindtap="selectResolution"
        data-index="{{index}}"
      >
        <view class="resolution-name">{{item.name}}</view>
        <view class="resolution-detail">{{item.detail}}</view>
        <image class="pick-icon" src="https://static.chengxinxingqiu.cn/mp/live/explain_goods/{{curResolutionIdx === index ? '' : 'un'}}selected.png" />
      </view>
    </view>
  </view>

  <view class="card">
    <view class="list row between">
      <view class="title">创建预告</view>
      <switch color="#F5701D" bindchange="toggleIsNotice" />
    </view>
    <view class="list row between" wx:if="{{isNotice}}">
      <view class="title row">预告时间</view>
      <date-picker value="{{noticeTimeString}}" bind:change="setNoticeTime">
        <view class="list-picker row">
          <text>{{ noticeTimeString || '选择时间' }}</text>
          <image class="arrow" src="./images/gray-arrow.png" />
        </view>
      </date-picker>
    </view>
  </view>
</view>

<button class="create-btn" bindtap="startLive">{{isNotice ? '创建预告' : '开始直播'}}</button>

<goods-picker-popup show="{{goodsPickerPopupVisible}}" bind:confirm="setGoodsIds" bind:hide="hideGoodsPickerPopup" />
