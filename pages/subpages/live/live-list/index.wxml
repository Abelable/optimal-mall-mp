
<view class="header {{navBarBgVisible ? 'show-bg' : ''}}" style="padding-top: {{statusBarHeight}}px;">
  <view class="nav-bar">
    <back-icon />
    <view class="nav-bar-title">诚信直播</view>
  </view>

  <view class="menu">
    <view 
      class="menu-item {{curMenuIdx === index ? 'active' : ''}}" 
      wx:for="{{menuList}}" 
      wx:key="index" 
      bindtap="selectMenu" 
      data-index="{{index}}"
    >
      <view class="menu-item-content">{{item.name}}</view>
      <image class="menu-active-tag" wx:if="{{curMenuIdx === index}}" src="./images/menu-active.png" />
    </view>
  </view>
</view>

<view class="container" style="padding-top: {{statusBarHeight + 100}}px;">
  <fall-flow list="{{liveList}}" generic:item="live-item" />
  <empty-illus wx:if="{{finished && !liveList.length}}" desc="暂无直播" />
  <view class="no-more-tips" wx:if="{{finished && liveList.length}}">～没有更多了～</view>
</view>
