.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.header.show-bg {
  overflow: hidden;
  background-image: url("https://static.chengxinxingqiu.cn/mp/live/bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}
.nav-bar {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
}
.nav-bar-title {
  margin-right: 44px;
  flex: 1;
  color: #000;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}

.menu {
  display: flex;
  padding-left: 32rpx;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 60rpx;
  padding: 12rpx 0 32rpx;
  color: #6a6f75;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.menu-active-tag {
  position: absolute;
  left: 50%;
  bottom: 12rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 16rpx;
}

.container {
  position: relative;
  padding: 20rpx;
  min-height: 100vh;
  background-image: url("https://static.chengxinxingqiu.cn/mp/live/bg.png");
  background-size: 100%;
  background-repeat: no-repeat;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
