.live-notice {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
}
.anchor-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.title {
  margin-top: 30rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.id {
  margin-top: 12rpx;
  color: #ccc;
  font-size: 28rpx;
}

.time-wrap {
  margin: 48rpx auto 0;
  padding: 30rpx;
  width: 538rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 60rpx;
}

.btn-wrap {
  position: absolute;
  left: 50%;
  bottom: calc(50px + env(safe-area-inset-bottom));
  transform: translateX(-50%);
}
.btn {
  margin-top: 30rpx;
  width: 582rpx;
  height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 44rpx;
  border: 1rpx solid #fff;
}
.btn.invalid {
  color: #ccc;
  border: 1rpx solid #999;
}
