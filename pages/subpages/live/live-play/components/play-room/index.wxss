.room {
  width: 100%;
  height: 100%;
  opacity: 0;
}
.room.show {
  opacity: 1;
}
.inner-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}
.inner {
  background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 10%, rgba(0,0,0,0) 90%, rgba(0,0,0,0.6) 100%);
}
.top-part {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.anchor-capsule-wrap {
  display: flex;
  align-items: center;
  width: fit-content;
  height: 44px;
}
.anchor-capsule-wrap.full-screen {
  justify-content: space-between;
  width: 100%;
}
.activity-wrap {
  display: flex;
  justify-content: space-between; 
  margin-top: 4rpx;
}
.room-id-capsule-wrap {
  display: flex; 
  flex-direction: column; 
  align-items: flex-end;
}
.room-id-capsule {
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  height: 44rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 1;
  border-radius: 22rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255,255,255,0.3);
}

.full-screen-icon{
  position: absolute;
  right: 24rpx;
  width: 32px;
  height: 32px;
  z-index: 1;
}

.bottom-part {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 0 calc(8px + env(safe-area-inset-bottom)) 8px;
  width: 100%;
  overflow: hidden;
  /* z-index: -1; */
}
.bottom-part.full-screen {
  padding: 0 30px 8px;
}

/* 用户加入购物车，关注，下单 */
.audience-action-tips {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  width: fit-content;
  height: 44rpx;
  border-radius: 8rpx;
  color: #fff;
  opacity: 0;
  transform: translateX(-100%);
  transition: .3s linear;
}
.audience-action-tips.coming {
  background: rgba(11,157,59,0.6);
}
.audience-action-tips.follow {
  background: rgba(251,28,28,0.6);
}
.audience-action-tips.buy {
  background: rgba(114,0,251,0.6);
}
.audience-action-tips.cart {
  background: rgba(255,168,41,0.6);
}
.audience-action-tips.share {
  background: rgba(19,47,199,0.6);
}
.audience-action-tips.packet {
  background: rgba(251,85,28,0.6);
}
.audience-action-tips.show {
  opacity: 1;
  transform: translateX(0);
  transition: .3s linear;
}

.praise-animation {
  position: absolute;
  right: 0;
  bottom: calc(112rpx + env(safe-area-inset-bottom));
}
.praise-animation.full-screen {
  right: 30px;
  bottom: 112rpx;
}

.btns-wrap {
  margin-top: 8px;
}
.input-btn {
  padding-left: 10px;
  flex: 1;
  height: 35px;
  color: #fff;
  font-size: 13px;
  border-radius: 18px;
  background: rgba(0, 0, 0, 0.3);
}
.chat-icon {
  margin-right: 5px;
  width: 26px;
  height: 26px;
}
.feature-btn {
  position: relative;
  margin-left: 8px;
  width: 35px;
  height: 35px;
  overflow: initial;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}
.goods-icon {
  width: 23px;
  height: 23px;
}
.more-icon {
  width: 30px;
  height: 30px;
}
.share-icon {
  margin-right: 1px;
  width: 22px;
  height: 22px;
}
.praise-icon {
  margin-bottom: 1px;
  width: 24px;
  height: 24px;
}
.praise-icon.hover {
  animation: scaleDraw 1s ease-in-out; 
}
@keyframes scaleDraw{
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(0.9);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(0.9);
  }
}
.praise-count {
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  padding: 0 5px;
  font-size: 9px;
  color: #F94950;
  height: 14px;
  line-height: 14px;
  border-radius: 7px;
  background: #fff;
  white-space: nowrap;
}

.praise-heart {
  position: absolute;
  width: 80px;
  height: 80px;
  opacity: 0;
}
