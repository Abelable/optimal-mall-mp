.live-notice {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;

}

.cover-wrap {
  position: relative;
  margin-top: 80rpx;
  width: 440rpx;
  height: 440rpx;
  border-radius: 18rpx;
  overflow: hidden;
}
.tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 80rpx;
  height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  background: #3F5F9A;
  border-radius: 4rpx;
}

.title {
  margin-top: 32rpx;
  max-width: 680rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.anchor-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 32rpx;
}
.avatar-wrap {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  font-size: 0;
}
.anchor-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.follow-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 36rpx;
  height: 36rpx;
}
.anchor-name {
  margin-top: 12rpx;
  max-width: 300rpx;
  color: #fff;
  font-size: 28rpx;
}

.time-wrap {
  margin-top: 48rpx;
  padding: 30rpx;
  width: 538rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 60rpx;
}

.btn-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 24rpx calc(24rpx + env(safe-area-inset-bottom));
  width: 100%;
}

.subscribe-btn, .share-btn {
  width: 340rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 1rpx solid #fff;
}

