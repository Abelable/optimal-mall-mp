.note-item {
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.author-info-wrap {
  margin-bottom: 10rpx;
  height: 100rpx;
}
.author-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.name-wrap {
  margin-left: 16rpx;
  flex: 1;
}
.author-name {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.time, .address {
  color: #999;
  font-size: 20rpx;
}
.address {
  flex: 1;
}
.split-spot {
  margin: 0 6rpx;
}
.address-icon {
  margin-right: 4rpx;
  width: 18rpx;
  height: 18rpx;
}
.address-detail {
  flex: 1;
}

.title {
  margin-top: 24rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.content {
  margin-top: 12rpx;
  color: #333;
  font-size: 28rpx;
}

.goods-info-wrap {
  margin: 24rpx 0;
  padding: 16rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}
.goods-image-wrap {
  position: relative;
  font-size: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-image {
  width: 100%;
  height: 100%;
}
.type-tag {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 8rpx;
  height: 30rpx;
  color: #fff;
  font-size: 18rpx;
  line-height: 1;
  border-bottom-right-radius: 6rpx;
  background: rgba(0, 0, 0, 0.6);
}
.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
  flex: 1;
  height: 100rpx;
}
.goods-name {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.sales-volumns {
  color: #999;
  font-size: 22rpx;
}

.btn-wrap {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  padding: 12rpx 36rpx 24rpx 12rpx;
}
.other-btns {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
  margin-left: 180rpx;
}
.btn-item {
  position: relative;
  font-size: 0;
}
.btn-icon {
  width: 46rpx;
  height: 46rpx;
}
.btn-data {
  position: absolute;
  top: -4rpx;
  left: 46rpx;
  color: #333;
  font-size: 20rpx;
  font-weight: bold;
}
