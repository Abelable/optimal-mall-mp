.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  overflow: hidden;
  background-image: url("https://static.youbozhenxuan.cn/mp/rural_bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}
.nav-bar-title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  color: #000;
  font-weight: 500;
}

.header {
  padding: 0 26rpx;
  height: 856rpx;
  background-image: url("https://static.youbozhenxuan.cn/mp/rural_bg.png");
  background-size: 100%;
  background-repeat: no-repeat;
}
.theme-title {
  display: block;
  margin: 48rpx auto 0;
  width: 668rpx;
  height: 78rpx;
}
.module-wrap {
  display: flex;
  justify-content: space-between;
  margin-top: 172rpx;
}
.module {
  padding: 0 28rpx;
  width: 336rpx;
  height: 152rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}
.module.adopt {
  background-image: url("https://static.youbozhenxuan.cn/mp/rural_module_adopt.png");
}
.module.bag {
  background-image: url("https://static.youbozhenxuan.cn/mp/rural_module_bag.png");
}
.module-title {
  margin-top: 22rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: 550;
}
.check-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
  width: 108rpx;
  height: 36rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 18rpx;
  background: linear-gradient( 118deg, #FFAC40 0%, #F5701D 100%);
}

.banner {
  margin-top: 16rpx;
}
.banner-img {
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}
.banner .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
}

.container {
  padding: 24rpx 20rpx;
}

.region-menu-wrap {
  display: flex;
  align-items: center;
}
.region-menu {
  flex: 1;
  white-space: nowrap;
  overflow-x: scroll;
}
.regin-item {
  display: inline-block;
  margin-right: 14rpx;
  padding: 0 46rpx;
  height: 56rpx;
  color: #6A6F75;
  font-size: 28rpx;
  line-height: 54rpx;
  background: #fff;
  border-radius: 28rpx;
  border: 1px solid #fff;
}
.regin-item.selected {
  color: #F5701D;
  background: #FFF3EC;
  border: 1px solid #F5701D;
}
.all-menu {
  margin-left: 24rpx;
  width: 56rpx;
  height: 56rpx;
}

.goods-list {
  margin-top: 24rpx;
}