page {
  position: relative;
  background: #FFF8EC;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg-0,
.nav-bar.show-bg-1,
.nav-bar.show-bg-2,
.nav-bar.show-bg-3 {
  overflow: hidden;
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}
.nav-bar.show-bg-0 {
  background-image: url("https://static.youbozhenxuan.cn/mp/gift_bg_1.png");
}
.nav-bar.show-bg-1 {
  background-image: url("https://static.youbozhenxuan.cn/mp/gift_bg_2.png");
}
.nav-bar.show-bg-2 {
  background-image: url("https://static.youbozhenxuan.cn/mp/gift_bg_3.png");
}
.nav-bar.show-bg-3 {
  background-image: url("https://static.youbozhenxuan.cn/mp/gift_bg_4.png");
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
}
.nav-bar-title {
  margin-right: 44px;
  flex: 1;
  color: #000;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
}

.bg-wrap {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1058rpx;
}
.bg-item {
  position: relative;
}
.bg-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

