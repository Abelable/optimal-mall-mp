.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  z-index: 100;
}

.poster-modal-main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 275px;
}

.poster {
  width: 275px;
  height: 451px;
}

.btns {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 50px;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 10px;
  font-weight: normal;
  line-height: 16px;
}
.btn-icon {
  margin-bottom: 6px;
  width: 42px;
  height: 42px;
  border-radius: 50%;
  background: #fff;
}
