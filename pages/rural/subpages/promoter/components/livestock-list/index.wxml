
<scroll-view class="livestock-list" wx:if="{{list.length}}" scroll-x>
  <view class="goods-item" wx:for="{{list}}" wx:key="index" item="{{item}}" bindtap="navToGoodsDetail" data-id="{{item.id}}">
    <image class="cover" mode="aspectFill" src="{{item.cover}}" lazy-load />
    <view class="content">
      <view class="title omit">
        {{item.name}}
      </view>
      <view class="info-wrap row between">
        <view class="row baseline">
          <price-unit price="{{item.price || 0}}" />
          <view class="market-price">¥{{item.marketPrice}}</view>
        </view>
        <view class="sales-volume">
          <text>已售</text>
          <text style="font-weight: bold;">{{ item.salesVolume }}</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>

