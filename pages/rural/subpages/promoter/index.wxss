.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  overflow: hidden;
  background-image: url("https://static.youbozhenxuan.cn/mp/promoter_bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
}
.nav-bar-title {
  margin-right: 44px;
  flex: 1;
  color: #000;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
}

.header {
  padding: 0 26rpx;
  height: 502rpx;
  background-image: url("https://static.youbozhenxuan.cn/mp/promoter_bg.png");
  background-size: 100%;
  background-repeat: no-repeat;
}

.title {
  margin-top: 24rpx;
  margin-left: 20rpx;
  color: #14191F;
  font-size: 32rpx;
  font-weight: 550;
}

.livestock-list {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 24rpx;
  height: 562rpx;
  overflow-x: scroll;
}

.goods-list {
  margin-top: 24rpx;
  padding: 0 20rpx;
}

.no-more-tips {
  padding: 24rpx 0 48rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
