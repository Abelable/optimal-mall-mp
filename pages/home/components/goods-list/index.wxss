.goods-item {
  margin-bottom: 20rpx;
  font-size: 0;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}

.cover-wrap {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}
.cover {
  width: 100%;
  height: 388rpx;
}
.goods-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 0 12rpx;
  height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 50rpx;
  border-radius: 0 0 0 16rpx;
}
.goods-tag.green {
  background: linear-gradient( 48deg, #009F3C 0%, #00CD6F 100%);
}
.goods-tag.hot {
  background: linear-gradient( 48deg, #FF3636 0%, #FF3D39 36%, #FFA266 100%);
}

.group-buying-data {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 24rpx;
  padding-right: 18rpx;
  width: 100%;
  height: 64rpx;
  background-image: url('https://static.youbozhenxuan.cn/mp/group-buying-tag-bg.png');
  background-size: 100%;
  background-repeat: no-repeat;
}
.group-buying-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 550;
}
.sales-volume {
  color: #fff;
  font-size: 24rpx;
}

.content {
  padding: 24rpx;
}

.title {
  color: #14191F;
  font-size: 28rpx;
  font-weight: bold;
}

.desc {
  margin-top: 10rpx;
  color: #F5701D;
  font-size: 24rpx;
}

.by-stages-tag {
  margin-top: 18rpx;
  padding: 2rpx 8rpx;
  width: fit-content;
  color: #FF4747;
  font-size: 18rpx;
  line-height: 30rpx;
  border-radius: 8rpx;
  border: 1px solid #FF4747;
}

.info-wrap {
  margin-top: 16rpx;
}
.price-wrap {
  display: flex;
}
.price {
  margin-left: 10rpx;
  padding: 0 8rpx;
  width: fit-content;
  height: 30rpx;
  color: #fff;
  font-size: 18rpx;
  background: #FF4747;
  border-radius: 8px 8px 8px 0px;
}

.buy-btn {
  display: flex;
}
.buy-btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 66rpx;
  background: #FFAC40;
  border-radius: 33rpx 0 0 33rpx;
}
.cart-icon {
  margin-left: 12rpx;
  width: 40rpx;
  height: 40rpx;
}
.buy-btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 122rpx;
  height: 66rpx;
  color: #fff;
  font-size: 28rpx;
  background: #FF3636;
  border-radius: 0 33rpx 33rpx 0;
}