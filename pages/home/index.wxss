.nav-bar {
  position: fixed;
  width: 100%;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  height: 44px;
}

.team-leader-info {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  width: 430rpx;
}
.avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
}
.nickname-wrap {
  margin-left: 10rpx;
  flex: 1;
}
.nickname {
  color: #fff;
  font-size: 28rpx;
  font-weight: 550;
}
.signature {
  color: #fff;
  font-size: 18rpx;
}

.nav-bar.show-bg {
  background: #f5f6f8;
}
.nav-bar.show-bg .nickname {
  color: #333;
}
.nav-bar.show-bg .signature {
  color: #666;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  padding: 0 22rpx;
  width: 430rpx;
  height: 36px;
  border-radius: 18px;
  background: #fff;
}

.search-icon {
  width: 16px;
  height: 16px;
}
.placeholder {
  flex: 1;
  margin-left: 12rpx;
  color: #A1A9B3;
  font-size: 26rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  width: 34px;
  height: 34px;
  border-radius: 18px;
  background: #fff;
}
.share-icon {
  width: 16px;
  height: 16px;
}

.banner-wrap {
  position: relative;
  height: 530rpx;
}
.banner-item {
  position: relative;
}
.banner-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  border-radius: 0 0 18rpx 18rpx;
}
.search-bar.outside {
  position: absolute;
  left: 24rpx;
  margin-left: 0;
  width: calc(100vw - 48rpx);
}

.container {
  padding: 20rpx;
}

.activity-wrap {
  display: flex;
  justify-content: space-between;
}
.activity {
  width: 340rpx;
  height: 160rpx;
}

.menu {
  display: flex;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 126rpx;
  color: #6A6F75;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #14191F;
  font-size: 32rpx;
  font-weight: 550;
}
.menu-active-tag {
  position: absolute;
  left: 50%;
  bottom: 16rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 16rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
