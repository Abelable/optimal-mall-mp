page {
  background: #f0f0f0;
}

.nav-bar {
  position: fixed;
  width: 100%;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  height: 44px;
}

.promoter-info {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  width: 350rpx;
}
.avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
}
.nickname-wrap {
  margin-left: 10rpx;
  flex: 1;
}
.nickname {
  color: #fff;
  font-size: 28rpx;
  font-weight: 550;
}
.signature {
  color: #fff;
  font-size: 18rpx;
}

.nav-bar.show-bg {
  background: #f5f6f8;
}
.nav-bar.show-bg .nickname {
  color: #333;
}
.nav-bar.show-bg .signature {
  color: #666;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  padding: 0 22rpx;
  width: 340rpx;
  height: 36px;
  border-radius: 18px;
  background: #fff;
  border: 0.5px solid #e1e1e1;
}
.search-icon {
  width: 16px;
  height: 16px;
}
.placeholder {
  flex: 1;
  margin-left: 12rpx;
  color: #a1a9b3;
  font-size: 26rpx;
}

.search-btn,
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  width: 34px;
  height: 34px;
  border-radius: 18px;
  background: #fff;
  border: 0.5px solid #e1e1e1;
}
.search-icon,
.share-icon {
  width: 16px;
  height: 16px;
}

.banner-wrap {
  position: relative;
  height: 530rpx;
}
.banner-item {
  position: relative;
}
.banner-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  border-radius: 0 0 18rpx 18rpx;
}
.banner-dots {
  position: absolute;
  right: 24rpx;
  bottom: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}

.container {
  padding: 20rpx;
}

.village-part {
  display: flex;
  justify-content: space-between;
}
.village-illus {
  width: 164rpx;
  height: 116rpx;
  border-radius: 12rpx;
}

.live-overview-wrap {
  margin-top: 20rpx;
}
.live-overview {
  padding: 16rpx 20rpx;
  width: 347rpx;
  height: 462rpx;
  border-radius: 18rpx;
  background-image: url('https://static.chengxinxingqiu.cn/mp/live/showcase_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.live-overview-title {
  margin-left: 32rpx;
  color: #000;
  font-size: 28rpx;
  font-weight: 550;
}
.live-overview-more {
  color: #999;
  font-size: 22rpx;
}
.more-icon {
  width: 22rpx;
  height: 22rpx;
}
.live-list {
  margin-top: 10rpx;
  height: 378rpx;
}
.live-item {
  position: relative;
}
.live-cover {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.status-wrap {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding-right: 12rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.3);
}
.status {
  margin-right: 12rpx;
  padding: 0 12rpx;
  height: 32rpx;
  border-radius: 16rpx;
}
.status.live {
  background: var(--theme-color-btn-bg);
}
.status.notice {
  background: linear-gradient(90deg, #40AFFF 0%, #2C75FC 100%);
}
.live-icon {
  margin-right: 6rpx;
  width: 18rpx;
  height: 18rpx;
}
.notice-spot {
  margin-right: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
}
.live-info-wrap {
  position: absolute;
  bottom: 0;
  padding: 16rpx 16rpx 32rpx;
  width: 100%;
  border-radius: 0 0 12rpx 12rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.live-title {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  text-shadow: 0 0 1px #999;
}
.live-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.anchor-avatar {
  margin-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.anchor-name {
  flex: 1;
  color: #fff;
  font-size: 22rpx;
  font-weight: 500;
}
.praise-info {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 20rpx;
}
.live-praise-icon {
  margin-right: 4rpx;
  width: 26rpx;
  height: 24rpx;
}
.notice-btn {
  margin-left: 8rpx;
  padding: 0 18rpx;
  height: 36rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 8rpx;
  background: var(--theme-color-btn-bg);
}

.integrity-illus {
  display: block;
  width: 347rpx;
  height: 220rpx;
  border-radius: 12rpx;
}

.middle-banner {
  margin-top: 24rpx;
}
.middle-banner-img {
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}
.middle-banner .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
}

.menu {
  display: flex;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 126rpx;
  color: #6a6f75;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.menu-active-tag {
  position: absolute;
  left: 50%;
  bottom: 16rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 16rpx;
}

.hometown-wrap {
  margin-bottom: 24rpx;
  padding-top: 114rpx;
  height: 610rpx;
  background-image: url('https://static.chengxinxingqiu.cn/mp/hometown/card_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.more-btn {
  margin-left: 48rpx;
  color: #14191F;
  font-size: 24rpx;
}
.more-arrow {
  width: 24rpx;
  height: 24rpx;
}

.hometown-list {
  margin: 70rpx 40rpx 0;
}
.hometown-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 18rpx;
  width: 192rpx;
  height: 260rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(51,62,91,0.5);
  border-radius: 16rpx;
}
.hometown-cover {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 130rpx;
}
.hometown-name {
  margin-top: 8rpx;
  color: #14191F;
  font-size: 28rpx;
  font-weight: 500;
}
.hometown-desc {
  margin-top: 8rpx;
  color: #14191F;
  font-size: 20rpx;
}

.split-title {
  margin-bottom: 14rpx;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.praise-icon {
  margin-left: 10rpx;
  margin-bottom: 14rpx;
  width: 40rpx;
  height: 46rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
