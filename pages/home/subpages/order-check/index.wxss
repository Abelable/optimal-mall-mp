.container {
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
}

.card {
  margin: 24rpx;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.card-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.card.err {
  background: #fff2f0;
  border: 1px solid #ffccc7;
}

.err-icon {
  width: 36rpx;
  height: 36rpx;
}
.err-msg {
  margin-left: 20rpx;
  flex: 1;
  color: #333;
  font-size: 26rpx;
}

/* 地址 */
.address-icon {
  width: 36rpx; 
  height: 36rpx;
}
.consignee {
  margin-left: 20rpx;
  flex: 1;
  font-size: 28rpx;
}
.person-info {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 26rpx;
}
.consignee-name {
  margin-right: 20rpx; 
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.address-info {
  margin-top: 12rpx;
  color: #333;
  font-size: 26rpx;
}
.select-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 订单列表 */
.goods-item {
  margin-bottom: 24rpx;
}
.goods-item:last-child {
  margin-bottom: 0;
}
.goods-cover-wrap {
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.goods-cover-wrap.is-gift {
  position: relative;
  padding: 6rpx;
  border-radius: 18rpx;
  background: linear-gradient(139deg, rgba(249, 250, 216), rgba(211, 225, 155));
}
.goods-cover {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.goods-cover.is-gift {
  border-radius: 14rpx;
}

.promote-tag {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 110rpx;
  height: 40rpx;
}
.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  padding-right: 18rpx;
  flex: 1; 
  height: 190rpx;
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.goods-sku {
  padding: 6rpx 12rpx;
  width: fit-content;
  color: #999;
  font-size: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.count-wrap {
  font-size: 24rpx;
  color: #666;
}
.count {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.list {
  margin-top: 24rpx;
  font-size: 28rpx;
}
.list-title {
  color: #333;
}
.list-tips {
  color: #999;
  font-size: 26rpx;
}
.list-sum {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #d8d8d8;
}
.list-sum:first-child {
  padding-top: 0;
}
.list-sum:last-child {
  padding-bottom: 0;
  border-bottom: none;
}

.arrow {
  margin-left: 6rpx;
  margin-right: -6rpx;
  width: 24rpx;
  height: 24rpx;
}

.balance {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  justify-content: flex-end;
  padding: 18rpx 24rpx calc(18rpx + env(safe-area-inset-bottom));
  width: 100%;
  background-color: #fff;
}
.total-price-wrap {
  margin-right: 32rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 550;
}
.count-desc {
  margin-right: 8rpx;
  color: #999;
  font-size: 28rpx;
}
.submit-btn {
  height: 80rpx;
  width: 220rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background: #e6e6e6;
}
.submit-btn.active {
  background: #F5701D;
}
