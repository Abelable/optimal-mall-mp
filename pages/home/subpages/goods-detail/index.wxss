.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding-left: 8px;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 20;
}
.nav-bar.show {
  background: #fff;
  box-shadow: 0 2rpx 2rpx rgba(0,0,0,0.05);
}
.menu-wrap {
  position: absolute;
  left: 50%;
  bottom: 6px;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 17px;
  height: 32px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 17px;
}
.menu-wrap.show {
  color: #000;
  background: none;
}
.menu-tips {
  position: relative;
  line-height: 32px;
  font-size: 15px;
  font-weight: 500;
}
.menu-wrap.show > .menu-tips.show::after {
  position: absolute;
  left: 0;
  bottom: 3px;
  width: 30px;
  height: 3px;
  content: '';
  background-color: #F5701D;
  border-radius: 2px 0px 2px 0px;
}
.menu-split {
  margin: 0 20rpx;
  line-height: 34px;
  font-size: 12px;
  font-weight: 500;
  color: #EFEFEF;
}
.menu-split.show {
  color: #000;
}

.banner-wrap {
  position: relative;
}

.video-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}
.video-player {
  width: 100%;
  height: 100%;
}

.mute-icon-wrap {
  position: absolute;
  left: 24rpx;
  bottom: 26rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
}
.mute-icon {
  width: 30rpx;
  height: 30rpx;
}

.banner-dots {
  position: absolute;
  right: 24rpx;
  bottom: 26rpx;
  width: 78rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 24rpx 24rpx 4rpx 24rpx;
}

.goods-info-wrap {
  margin-bottom: 18rpx;
  padding: 20rpx;
  background: #fff;
}

.activity-info-wrap {
  padding: 16rpx;
  min-height: 140rpx;
  background-image: url('https://static.youbozhenxuan.cn/mp/goods_activity_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.market-price {
  margin-left: 16rpx;
  color: #bbb;
  font-size: 28rpx;
  text-decoration: line-through;
}
.bottom-price {
  margin-left: 16rpx;
  margin-bottom: 30rpx;
  padding: 2rpx 10rpx;
  width: fit-content;
  color: #F5701D;
  font-size: 20rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 16rpx 0px;
}
.more-icon {
  margin-left: 4rpx;
  width: 20rpx;
  height: 20rpx;
}

.activity-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.activity-name {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
}
.activity-sales {
  margin-top: 4rpx;
  color: #fff;
  font-size: 24rpx;
}
.lightning {
  margin-bottom: -6rpx;
  width: 20rpx;
  height: 20rpx;
}

.goods-name {
  margin-top: 16rpx;
  color: #14191F;
  font-size: 28rpx;
  font-weight: 550;
}

.introduction-wrap {
  display: flex;
  margin-top: 8rpx;
}
.introduction {
  flex: 1;
  color: #F5701D;
  font-size: 24rpx;
}
.sale-volume {
  margin-left: 24rpx;
  color: #666;
  font-size: 24rpx;
}



.list-spec {
  margin: 18rpx 24rpx;
  padding: 0 24rpx;
  height: 110rpx;
  font-size: 26rpx;
  background: #fff;
  border-radius: 12rpx;
}
.list-spec-title {
  color: #333;
  font-weight: 600;
}
.choose-btn {
  display: flex;
  align-items: center;
  flex: 1;
  margin-left: 24rpx;
}
.choose-btn-desc {
  flex: 1;
  color: #a6a6a6;
  text-align: right;
}
.choose-btn-icon {
  width: 16rpx;
  height: 16rpx;
}

.comment-summary-wrap {
  margin: 18rpx 24rpx;
  padding: 0 24rpx;
  height: 110rpx;
  background: #fff;
  border-radius: 12rpx;
}
.comment-user-avatar-wrap {
  margin-left: 8rpx;
  margin-right: 12rpx;
}
.comment-user-avatar {
  margin-left: -8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}
.comment-num {
  color: #333;
  font-size: 26rpx;
  font-weight: 600;
}
.goods-score-wrap {
  color: #666;
  font-size: 26rpx;
}
.goods-score {
  margin-left: 8rpx;
  color: #333;
  font-weight: 600;
}

.goods-detail {
  padding: 24rpx;
  font-size: 0;
  background: #fff;
}

.recommend-goods-wrap {
  padding: 0 20rpx;
}

.nomore-tip {
  padding: 18rpx 0 calc(135rpx + env(safe-area-inset-bottom));
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 12rpx 0 calc(10rpx + env(safe-area-inset-bottom));
  width: 100%;
  background: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0,0,0,0.05);
}
.shortcut-wrap {
  flex: 1;
}
.shortcut {
  position: relative;
  flex: 1;
  color: #666;
  font-size: 20rpx;
  text-align: center;
  line-height: 1;
}
.shortcut-icon {
  width: 50rpx;
  height: 50rpx;
}
.cart-count {
  position: absolute;
  top: -6rpx;
  right: 6rpx;
  padding: 0 10rpx;
  height: 30rpx;
  color: #fff;
  font-size: 18rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  background: #FE4019;
  transform: scale(0.8);
}

.btns {
  display: flex;
  margin-right: 24rpx;
  margin-left: 12rpx;
  width: 456rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
.add-cart-btn, .buy-btn {
  flex: 1;
  color: #fff;
  font-size: 28rpx;
}
.add-cart-btn {
  background: #FFAC40;
}
.buy-btn {
  background: #FF3636;
}
.add-cart-btn.invalid, .buy-btn.invalid {
  color: #fff;
  background: #ccc;
}
