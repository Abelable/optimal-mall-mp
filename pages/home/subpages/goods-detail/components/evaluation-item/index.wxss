.evaluation-item {
  margin: 24rpx 0;
  padding: 24rpx;
  background: #fff;
  border-radius: 18rpx;
}
.evaluation-item.noPadding {
  padding: 0;
}

.user-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.user-name {
  margin-left: 16rpx;
  flex: 1;
  color: #3C3F42;
  font-size: 24rpx;
}
.comment-date {
  color: #A1A9B3;
  font-size: 20rpx;
}

.comment-rate-wrap {
  margin-top: 16rpx;
  padding: 0 20rpx;
  height: 72rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
}
.comment-rate {
  margin-left: 8rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}
.comment-content {
  margin-top: 18rpx;
  color: #333;
  font-size: 26rpx;
}
.comment-images-wrap {
  position: relative;
  margin-top: 18rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.comment-image {
  margin-right: 18rpx;
  width: 206rpx;
  height: 206rpx;
  border-radius: 16rpx;
}
.comment-image:last-child {
  margin-right: 0;
}
.more-image-tips {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 50rpx;
  height: 50rpx;
  color: #333;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 4rpx;
}
