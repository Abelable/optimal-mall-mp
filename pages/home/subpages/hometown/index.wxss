.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  background-image: url("https://static.chengxinxingqiu.cn/mp/hometown/bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}
.nav-bar-inner {
  padding: 0 8px;
  height: 44px;
}
.nav-bar-title {
  color: #fff;
  font-weight: 500;
  text-shadow: 0 0 8px #44809C;
  opacity: 0;
  transition: opacity .2s ease;
}
.nav-bar-title.show-bg {
  opacity: 1;
  transition: opacity .2s ease;
}

.header {
  padding: 0 26rpx;
  height: 760rpx;
  background-image: url("https://static.chengxinxingqiu.cn/mp/hometown/bg.png");
  background-size: cover;
  background-repeat: no-repeat;
}

.content-wrap {
  margin-top: 268rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  box-shadow: 0 1px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
}
.content-title {
  color: #141925;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1;
}
.content {
  margin-top: 18rpx;
  color: #666;
  font-size: 24rpx;
}

.region-menu-wrap {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #fff;
}
.region-menu-wrap.fixed {
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 100;
}
.region-menu {
  flex: 1;
  white-space: nowrap;
  overflow-x: scroll;
}
.regin-item {
  display: inline-block;
  margin-right: 14rpx;
  padding: 0 46rpx;
  height: 56rpx;
  color: #6A6F75;
  font-size: 28rpx;
  line-height: 54rpx;
  background: #f5f6f8;
  border-radius: 28rpx;
  border: 1px solid #f5f6f8;
}
.regin-item.selected {
  color: #F5701D;
  background: #FFF3EC;
  border: 1px solid #F5701D;
}
.all-menu {
  margin-left: 24rpx;
  width: 56rpx;
  height: 56rpx;
}

.container {
  padding: 24rpx 20rpx;
}
.container.fixed {
  margin-top: 104rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
