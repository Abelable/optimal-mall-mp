.login-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
}
.bg {
  position: absolute;
  width: 100%;
  bottom: 0;
}
.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.content-wrap {
  padding: 0 50rpx;
}
.title {
  color: #333;
  font-size: 68rpx;
  font-weight: bolder;
  /* font-family: Verdana; */
}
.sub-title {
  color: #666;
  font-size: 34rpx;
  font-weight: bold;
  /* font-family: Verdana; */
}
.tips {
  margin-top: 0.6rem;
  color: #999;
  font-size: 26rpx;
}
.register-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 0;
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: #0095fa;
  border-radius: 10rpx;
}
.arrow {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.agreement-tips {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(6px);
}

.modal-dialog {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 570rpx;
  height: 542rpx;
  border-radius: 50rpx;
  background: rgb(4, 6, 15);
}
.modal-title {
  padding-top: 30rpx;
  text-align: center;
}
.modal-content {
  color: #fff;
  line-height: 22px;
  text-align: center;
  font-size: 28rpx;
}
.btn-confirm {
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 360rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: center center #4A54FF;
  background-image: linear-gradient(315deg,#6772FF 0,#00F9E5 100%);
  border-radius: 40rpx;
}
.modal-footer {
  display: flex;
  justify-content: center;
}
.modal-footer button {
  text-align: center;
}
