.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: #fff;
}

.logo-wrap {
  position: absolute;
  top: 400rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100vw;
  text-align: center;
}
.logo {
  margin-right: 40rpx;
  width: 440rpx;
  height: 174rpx;
}
.logo-desc {
  margin-top: 8rpx;
  color: #6A6F75;
  font-size: 28rpx;
}

.login-btn, .cancel-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  line-height: 76rpx;
  width: 428rpx;
  height: 76rpx;
  border-radius: 38rpx;
}
.login-btn {
  bottom: 372rpx;
  color: #fff;
  background: #F5701D;
}
.cancel-btn {
  bottom: 260rpx;
  color: #272727;
  background: #F3F3F3;
}

.agreement {
  position: absolute;
  bottom: 114rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 22rpx;
  font-weight: 400;
}
.checkbox {
  transform: scale(0.6);
}

.auth-modal {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  z-index: 100;
}
.modal-main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 50rpx;
  width: 670rpx;
  border-radius: 30rpx;
  background: #fff;
}
.model-title {
  color: #333;
  font-size: 32rpx;
}
.modal-tips {
  position: relative;
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.modal-form {
  margin-top: 50rpx;
}
.form-item {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1px solid #f5f5f5;
}
.form-item:first-child {
  border-top: 1px solid #f5f5f5;
}
.label {
  margin-right: 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.avatar-wrapper {
  flex: 1;
  height: 100rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.more-icon {
  width: 24rpx;
  height: 24rpx;
}
.nickname-input {
  flex: 1;
  font-size: 28rpx;
}

.save-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx auto 0;
  width: 464rpx;
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  background: #F5701D;
}
