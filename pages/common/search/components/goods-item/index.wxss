.goods-item {
  margin-bottom: 24rpx;
  padding: 18rpx;
  font-size: 0;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.goods-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 18rpx;
}

.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 18rpx;
  flex: 1;
  height: 140rpx;
}

.goods-title {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.goods-tag {
  display: inline-block;
  margin-bottom: 1rpx;
  padding: 0 12rpx;
  height: 33rpx;
  color: #FFE5BD;
  font-size: 18rpx;
  line-height: 33rpx;
  font-weight: 500;
  text-align: center;
  vertical-align: text-bottom;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #404A5C 0%, #0F131A 100%);
}

.info-wrap {
  margin-top: 12rpx;
}
.sales-volume {
  color: #888;
  font-size: 22rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
