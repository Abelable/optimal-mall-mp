.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.btn {
  position: fixed;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80vw;
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 18rpx;
  background: #212121;
}
