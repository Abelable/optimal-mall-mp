page {
  position: relative;
  min-height: 100vh;
  background-color: #f5f6f8;
  --theme-color: #77a9fd;
  --theme-color-gradient: linear-gradient(90deg, #6097f7 0%, #86abeb 100%);
  --theme-color-btn-bg: linear-gradient(90deg, #00cffc 0%, #0095fa 100%);
}

view, text, image, scroll-view, navigator, swiper, swiper-item {
  box-sizing: border-box;
}

button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
}
button::after {
  content: '';
  width: 0;
  height: 0;
  display: none;
  background-color: transparent;
}

.num {
  font-weight: bold;
}

.row {
  display: flex;
  align-items: center;
}
.row.between {
  justify-content: space-between;
}
.row.baseline {
  align-items: baseline;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single-line {
  line-height: 1;
  -webkit-line-clamp: 1;
}

.small-dots .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
}
.custom-dots .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: var(--theme-color);
  opacity: 0.5;
}
.custom-dots .wx-swiper-dot.wx-swiper-dot-active {
  width: 24rpx;
  opacity: 1;
}
