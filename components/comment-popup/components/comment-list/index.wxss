.comment-list {
  padding: 10rpx 20rpx;
}
.comment-list.is-reply {
  margin-top: 10rpx;
  padding: 0;
}
.main {
  display: flex;
  padding: 10rpx;
}
.main.is-top {
  background: #F7F7F7;
}

.user-avatar {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  background-image: url('https://img.ubo.vip/mp-short-video/youlian-icon.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.user-avatar.is-child {
  width: 40rpx;
  height: 40rpx;
}

.list-content {
  position: relative;
  padding-left: 12rpx;
  flex: 1;
}

.user-name-wrap {
  display: flex;
  align-items: center;
}
.user-name {
  color: #DAB174;
  font-size: 26rpx;
}
.author-icon {
  margin-left: 22rpx;
  width: 60rpx;
  height: 34rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 34rpx;
  background: #FE3552;
  border-radius: 4rpx;
}
.reply-tips {
  margin-left: 40rpx;
  color: #999;
  font-size: 24rpx;
}

.comment {
  margin-top: 2rpx;
  padding-right: 80rpx;
  color: #333;
  font-size: 30rpx;
}
.at-lebal {
  color: #3E6BF8;
}
.date {
  margin-top: 4rpx;
  color: #999;
  font-size: 26rpx;
}
.praise-wrap {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 0;
  text-align: center;
}
.praise-icon {
  width: 32rpx; 
  height: 30rpx;
}
.praise-count {
  margin-top: 6rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 1;
  white-space: nowrap;
}

.slot-wrap {
  padding-left: 74rpx;
}
