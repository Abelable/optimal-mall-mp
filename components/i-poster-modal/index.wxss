.poster-modal {
  position: fixed;
  top: -150%;
  left: 50%;
  width: 310px;
  transform: translate(-50%, -50%);
}
.poster-modal.show {
  top: 50%;
}
.poster {
  width: 310px;
  height: 480px;
}
.save-btn {
  margin: 15px auto 0;
  padding: 0 20px;
  width: fit-content;
  height: 35px;
  color: #000;
  font-size: 13px;
  font-weight: 600;
  text-align: center;
  line-height: 35px;
  border-radius: 20px;
  background: #F7CC9C;
}
