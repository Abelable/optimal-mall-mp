.poster-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 291px;
  transform: translate(-50%, -50%);
  z-index: 100;
}
.poster {
  width: 291px;
  height: 416px;
}

.btns {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 10px;
  font-weight: normal;
  line-height: 16px;
}
.btn-icon {
  margin-bottom: 7px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0px 1px 2px 0px rgba(215,215,215,0.5);
}
