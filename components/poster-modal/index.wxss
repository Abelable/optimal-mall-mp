.poster-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 291px;
  transform: translate(-50%, -50%);
  z-index: 100;
}
.poster {
  width: 291px;
  height: 416px;
}

.btns {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 50px;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 10px;
  font-weight: normal;
  line-height: 16px;
}
.btn-icon {
  margin-bottom: 6px;
  width: 42px;
  height: 42px;
  border-radius: 50%;
}
