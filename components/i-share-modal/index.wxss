.share-modal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 294rpx;
  transform: translateY(100%);
  transition: .2s ease;
}
.share-modal.show {
  transform: translateY(0);
  transition: .2s ease;
}
.share-modal-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  z-index: -1;
}
.share-modal-title {
  margin: 36rpx 0;
  font-size: 24rpx;
  color: #000;
  font-weight: 500;
  line-height: 34rpx;
  text-align: center;
}
.share-modal-content {
  margin: 0 100rpx;
  display: flex;
  align-items: center;
}
.share-modal-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  font-size: 22rpx;
  color: #000;
  line-height: 32rpx;
}
.share-modal-btn-icon {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0px 1px 2px 0px rgba(215,215,215,0.5);
}

